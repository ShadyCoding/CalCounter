<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BC34A"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".FoodItemDetailsActivity">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/logo"
        android:src="@drawable/apple"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:id="@+id/layout"
        android:layout_below="@+id/logo"
        android:background="@drawable/row_bg"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detsFoodName"
            android:text="lajdfla"
            android:textSize="20sp"
            android:layout_marginTop="18dp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detsCaloriesTitle"
            android:text="Calories: "
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detsCaloriesValues"
            android:text="0"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detsDateText"
            android:text="Consume on..."
            android:textStyle="italic"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/detsShareButton"
            android:text="@string/share_title"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:layout_gravity="right"/>




    </LinearLayout>

</RelativeLayout>